apml_version: 1.0
metadata:
  title: AGENT STARTUP INSTRUCTIONS - READ FIRST
  priority: CRITICAL
  for: ALL_AGENTS

startup_sequence:
  step_1_identify:
    - Read your role brief (L2_COORDINATOR_BRIEF.apml or L3_WORKER_BRIEF.apml)
    - Note your agent type (architect/frontend/backend/designer)
    
  step_2_check_tasks:
    command: "curl -s http://localhost:3001/api/queue/tasks/[YOUR_TYPE]"
    example_architect: "curl -s http://localhost:3001/api/queue/tasks/architect"
    example_frontend: "curl -s http://localhost:3001/api/queue/tasks/frontend"
    
  step_3_claim_task:
    command: "./claim-task.sh [YOUR_TYPE]"
    example: "./claim-task.sh architect"
    
  step_4_complete_task:
    command: "./complete-task.sh [TASK_ID]"
    example: "./complete-task.sh TASK_39_1752081829789"

